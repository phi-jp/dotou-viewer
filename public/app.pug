  script.
    this.on('mount', () => {
      this.setup();
    });

    this.setup = async () => {
      var editor = monaco.editor.create(this.refs.editor, {
        value: '',
        language: this.opts.language || 'html',
        minimap: {
          enabled: false,
        },
        // エディタのスタイル("vs" | "vs-dark" | "hc-black")
        theme: 'vs-dark',
        lineNumbers: false,

        autoClosingQuotes: 'always',

        // 画面をリサイズしたときに自動的にエディタをリサイズする
        automaticLayout: true,

        // オートインデントを有効化(bracketsとか)
        autoIndent: true,
      });
      var model = editor.getModel();
      model.updateOptions({
        tabSize: 2,
        insertSpaces: true,
      });

      // 保存イベント
      editor.addCommand(monaco.KeyMod.CtrlCmd | monaco.KeyCode.KEY_S, (e) => {
        this.trigger('save');
      });

      this.editor = editor;
    };

    this.setValue = (v) => {
      if (!this.editor) return ;
      this.editor.setValue(v);
    };

    this.getValue = () => {
      if (!this.editor) return '';

      return this.editor.getValue();
    };