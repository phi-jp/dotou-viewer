  script.
    this.logs = [];

    this.log = (data) => {
      var str = '';

      // method に応じて文字列化
      if (data.method === 'log') {
        str = data.args.join(' ');
      }
      else if (data.method === 'dir') {
        str = JSON.stringify(data.args[0], null, '  ');
      }

      if (str) {
        this.logs.push(str);
      }

      this.update();
    };

    this.clear = () => {
      this.logs = [];
      this.update();
    };


